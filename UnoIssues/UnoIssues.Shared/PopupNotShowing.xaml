<Page
    x:Class="UnoIssues.PopupNotShowing"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UnoIssues"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Button x:Name="ShowPopup" Content="Show Popup" Click="ShowPopup_Click" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="4"/>
        <Popup x:Name="ThePopup" IsLightDismissEnabled="True">
            <Border BorderBrush="Black" BorderThickness="1" Background="LightBlue" Width="100" Height="50">
                <TextBlock Text="Hello!" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
        </Popup>
    </Grid>
</Page>
